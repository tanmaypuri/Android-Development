<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pooja.carpool.RideOffer"
    android:background="#d9ffb3">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="Source" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dText"
        android:layout_below="@+id/sText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Destination" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/tText"
        android:layout_marginTop="93dp"
        android:text="Time"
        android:layout_below="@+id/dText"
        android:layout_alignStart="@+id/sText"
        android:layout_alignEnd="@+id/sText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offer Ride"
        android:id="@+id/offer"
        android:layout_below="@+id/tText"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/dText" />
</RelativeLayout>
